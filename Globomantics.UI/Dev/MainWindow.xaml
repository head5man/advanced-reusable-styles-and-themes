<Window x:Class="Dev.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gui="http://globomantics.com/2019/ui/wpf"
    Title="MainWindow"
    Width="800"
    Height="450">
    <Grid Background="{gui:ThemeResource ResourceKey=ContentBackground}">
        <CheckBox x:Name="EnabledInput"
            Margin="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="IsEnabled"
            IsChecked="True" />

        <Button
            Margin="8"
            Padding="8,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="OnThemeSwitch"
            Content="Switch theme"
            IsDefault="True" />

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="{Binding IsChecked, ElementName=EnabledInput}">

            <TextBlock
                Margin="0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="{gui:ThemeResource ResourceKey=ContentForeground}"
                Text="This is a test!" />

            <Button
                Margin="0,8"
                Content="Button" />
            <CheckBox
                Margin="0,8"
                Content="CheckBox" />
        </StackPanel>
    </Grid>
</Window>
